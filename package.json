{
  "name": "@johnpittman/react-design-system",
  "version": "0.0.1",
  "main": "lib/index.js",
  "typings": "lib/index.d.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "bench": "for f in $(ls src/**/__bench__/**/*.bench.ts); do ts-node $f; done",
    "build": "npm run clean && npm run build:css && npm run build:typescript",
    "build:css": "gulp css --gulpfile ./scripts/build.js",
    "build:typescript": "ttsc --p tsconfig-build.json",
    "build:storybook": "build-storybook",
    "clean": "rm -rf lib",
    "lint": "npm run lint:eslint & npm run lint:stylelint",
    "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx,json}' --ignore-pattern '*-lock.json' --ignore-path '.gitignore' --fix --cache",
    "lint:staged": "lint-staged",
    "lint:stylelint": "stylelint --fix --cache './src/**/*.css' './src/**/*.module.css'",
    "test": "jest --runInBand --passWithNoTests --silent",
    "test:changed": "npm run test -- --changedSince=master",
    "test:watch": "npm run test -- --watch",
    "typecheck": "ttsc --p tsconfig-build.json --incremental --tsBuildInfoFile tsconfig.tsbuildinfo",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": {
    "name": "John Pittman",
    "email": "johnrichardpittman@gmail.com",
    "url": "https://github.com/johnpittman"
  },
  "license": "MIT",
  "description": "React Storybook design system",
  "keywords": [],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnpittman/react-design-system.git.git"
  },
  "bugs": {
    "url": "https://github.com/johnpittman/react-design-system.git/issues"
  },
  "homepage": "https://github.com/johnpittman/react-design-system.git#readme",
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.2.5",
    "@storybook/addon-essentials": "^6.2.5",
    "@storybook/addon-links": "^6.2.5",
    "@storybook/react": "^6.2.5",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chromatic": "^5.7.1",
    "css-loader": "^5.2.0",
    "esbuild-loader": "^2.11.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-prettier": "^3.3.1",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.9",
    "postcss-import": "^14.0.1",
    "postcss-loader": "^4.2.0",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "storybook-addon-designs": "^5.4.5",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.5.4",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.3",
    "typescript-plugin-css-modules": "^3.2.0",
    "typescript-transform-paths": "^2.2.3"
  }
}
